<Menu>:
    text: 'Contacts'
    values: ('Contacts', 'Chats', 'Settings', 'Quit')


<RootBox>:
    size_hint: (1, 1)
    orientation: 'vertical'

    # --- header line
    BoxLayout:
        orientation: 'horizontal'
        size_hint: (1, None)
        height: 44
        canvas.before:
            Color:
                rgb: 0.4, 0.7, 1.0
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            id: menu_container
            size_hint: (0.25, 1)
            height: 44

        Label:
            text: '[b][color=000000]Kivy Chat[/color][/b]'
            size_hint: (0.5, 1)
            height: 44
            markup: True

    # --- screen content
    ScreenManager:
        id: screen_manager

        Screen:
            name: 'Contacts'

            BoxLayout:
                id: friend_box_container
                size_hint: (1, 1)

                Label:
                    id: connection_label
                    size_hint: (1, 1)
                    text: u'Connecting...'

        Screen:
            name: 'Chats'

            BoxLayout:
                id: chat_box_container
                size_hint: (1, 1)
